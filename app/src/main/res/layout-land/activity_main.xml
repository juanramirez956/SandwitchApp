<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent" tools:context=".MainActivity"
    android:id="@+id/mainlayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcomemsg"
        android:id="@+id/lblTitle"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Tomato"
                android:id="@+id/chkTomato"
                android:checked="false"
                android:layout_row="0"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peperoni"
                android:id="@+id/chkPepperoni"
                android:checked="false"
                android:layout_row="1"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onion"
                android:id="@+id/chkOnion"
                android:checked="false"
                android:layout_row="0"
                android:layout_column="1" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Chesse"
                android:id="@+id/chkCheese"
                android:checked="false"
                android:layout_row="0"
                android:layout_column="2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lettuce"
                android:id="@+id/chkLettuce"
                android:checked="false"
                android:layout_row="0"
                android:layout_column="4" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Bacon"
                android:id="@+id/chkBacon"
                android:checked="false"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_column="1" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/turkey"
                android:id="@+id/chkTurkey"
                android:checked="false"
                android:layout_row="1"
                android:layout_column="2" />

        </GridLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/choosebread"
        android:id="@+id/lblBread"
        android:gravity="center_horizontal" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgpBreadOptions"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbWheat"
            android:checked="false"
            android:text="@string/breadwheat" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbWhite"
            android:checked="false"
            android:text="@string/breadwhite" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breadrye"
            android:id="@+id/rbRye"
            android:checked="false" />

    </RadioGroup>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeorder"
        android:id="@+id/btnPlace"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
